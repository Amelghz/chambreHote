{% extends 'base.html.twig' %}

{% block titre %}
    {{ parent()|upper }}:<br>
    Client: {{ client.getNom() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        .center-card {
            display: flex;
            justify-content: center;
            /* align-items: center; */
            overflow: hidden;
        }
        .chambre-image {
            max-width: 200px;
        }
        .custom-card {
            width: 400px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container center-card">
    <div class="card custom-card">
        <div class="card-body">
            <h2 class="card-title">Nom: {{ client.getNom() }}</h2>
            <h5 class="card-subtitle mb-2 text-muted">Id: {{ client.getNbrPersonne() }}</h5>
            <h5 class="card-subtitle mb-2 text-muted">Email: {{ client.getEmail() }}</h5>
            <h5 class="card-subtitle mb-2 text-muted">Date d'arrivée: {{ client.getDateArr()|date('Y-m-d') }}</h5>
            <h5 class="card-subtitle mb-2 text-muted">Date de départ: {{ client.getDateDep()|date('Y-m-d') }}</h5>
            {# Commenting out the Image section #}
            {# {% if client.Image is not null %}#}
            {# <img src="{{ publicPath ~ client.getImage }}" class="card-img-top img-fluid chambre-image" alt="Chambre Image">#}
            {#{% endif %}-->#}
        </div>
    </div>
</div>
{% endblock %}
